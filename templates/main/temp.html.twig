  <style>
    nav{
        background-color: #4e342e;
        color: blue;
    }
    .nav-link {
      background-color: #4e342e;
      color: white;
    }
    .nav-item{
      background-color:#4e342e;
      color: white;
    }
    .dropdown-menu{
      background-color: #7b5e57;
      color:white;
    }
    .dropdown-item{
      color: #111111;
    }
    .dropdown-item:link{
      color: #111111;
    }
    .dropdown-menu  > a:hover {
    background-color: #260e04;
    background-image: none !important;
    }
    .input-group > .btn {
      background-color: #c56000;
      color:black;
      width: 100%;

    }
    .input-group > input {
      background-color: #8d6e63;
      color: #111111;
    }
    .input-group >input::placeholder{
      color: #111111;
    }
    .form-group > p  > input {
      background-color: #8d6e63;
      color: #111111;
    }
    .form-group > p > input::placeholder {
      background-color: #8d6e63;
      color: #111111;
    }


  </style>

</head>
<body style="background-color:#000000;">


