{% extends "login/temp.html.twig"%}
{% block title %} Produkt {% endblock %}
{% block content %}

<div class="jumbotron" style="width:100%; height:100%;background-color:#c63f17;color:white;">
<div style="background-color:#4e342e; color:white;"><center><h1>{{product.name}} </h1></center></div>
</hr>
<div class="container">
<div class="row" style="height:100%; width:100%; background-color:##8b6b61;">
<div class="jumbotron col" style=" width:100%; height:100%; background-color:#8b6b61; color:black;">
  <h3> Descrioption: </h3></br>
  {{product.descrioption}}
</div>
<div class="jumbotron col" style="width:100%; height:100%; background-color:#8b6b61; color:black;">
  <b> Cena: {{product.price}} </b></br>
  <b> Minimalny wiek gracza: {{product.age}} </b></br>
  <b> Producent: {{product.company}} </b> </br>
  <form action="{{path("app_product_pushbasket",{id: product.id}) }}" method="POST">
  <div class="form-group">
    <label for="count"> Ilosc: </label>
    <input name="count" id="count" class="form-control" type="number" min="1" max="999" step="1" value="1"/>
    <input type="submit" class="form-control btn btn-success" value="Kup" />
  </div>
  <a href="{{path('app_main_controller')}}" class="btn btn-primary">Cofnij</a>
  </form>
</div>

</div>
</div>
{% endblock %}

