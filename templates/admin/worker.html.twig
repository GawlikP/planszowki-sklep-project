{% extends "login/temp.html.twig"%}
{% block title %} Zamówienia {% endblock %}
{% block content %}

  <div class="jumbotron" style="width:100%; height:100%;background-color:#c63f17;color:white;">
    <p>Imie: {{worker.Name}}</p>
    <p>Nazwisko: {{worker.LastName}}</p>
    <p>Nick: {{worker.Nick}}</p>
    <p>Email: {{worker.email}}</p>
    <p>Typ konta: Pracownik</p>
    <form method="post" action="/admin/users/edit/try/{{worker.id}}">
    <div class="form-group">
      <input type="text" name="nick" placeholder="Zmien nick" class="form-control" pattern="[A-Z]{1}[a-z]+" />
      <input type="password" name="password" placeholder="Zmien hasło" class="form-control"  />
      <input type="email" name="email" placeholder="Zmien email" class="form-control" />
      <input type="text" required class="form-control" name="imie" pattern="[A-Z]{1}[a-z]+" placeholder="Imię"/>
      <input type="text" required class="form-control" name="nazwisko" pattern="[A-Z]{1}[a-z,ś,ó,ż,ź,ć]+" placeholder="Nazwisko"/>
      <input type="submit" class="btn btn-info" value="Edytuj" />
    </div>
    </form>
    <a href="/admin/users/delete/{id}" class="btn btn-danger">Usuń</a>

  </div>

{% endblock %}

